<?xml version="1.0" encoding="utf-8" ?>
<addonManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://schemas.apprenda.com/AddonManifest"
               xsi:schemaLocation="http://schemas.apprenda.com/AddonManifest https://apprenda.com/schemas/platform/6.5/AddonManifest.xsd"
               name="Bluemix"
               description="Provides Bluemix Services to Apprenda Applications"
               deploymentNotes=""
               developerHelp=""
               vendor="Apprenda"
               author="Joe Truncale"
               version="1.0.0"
               provisioningUsername=""
               provisioningPassword=""
               manifestVersion="2">
 <!--Documentation
 Add-On documentation: http://docs.apprenda.com/current/addons 
 Add-On creation tutorial: http://docs.apprenda.com/6-5/addoncreation -->
  <parameters allowUserDefinedParameters="true">
    <parameter key="BluemixUser" displayName="Bluemix Username" description="Username of the Bluemix Account" isRequired="true"/>
    <parameter key="BluemixPass" displayName="Bluemix Password" description="Password of the Bluemix Account" isEncrypted="true" isRequired="true"/>
    <parameter key="Space" displayName="Space" description="The space within Bluemix where the service instance will be provisioned" isRequired="true"/>
    <parameter key="API_URL" displayName="Bluemix API URL" description="The URL of the Bluemix API" isRequired="true" defaultValue="http://api.ng.bluemix.net"/>
    <parameter key="API_Version" displayName="Bluemix API Version" description="The version of the Bluemix API" isRequired="true" defaultValue="v2"/>
    <parameter key="ServiceName" displayName="Bluemix Service Name" description="The name of the service in the Bluemix catalog (ie. watson_vision_combined)" isRequired="true"/>
    <parameter key="Name" displayName="Service Name" description="A name for your instance of the service. Must be unique for all of Bluemix" isRequired="true"/>
  </parameters>
</addonManifest>
